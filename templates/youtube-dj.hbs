<div class="youtube-dj-content">
  <header class="youtube-dj-header">
    <div class="header-content">
      <h2>
        <i class="fas fa-music"></i>
      </h2>
    </div>
    <div class="header-status">
      {{#if hasJoinedSession}}
        {{#if isDJ}}
          <div class="status-badge status-dj">
            <i class="fas fa-microphone"></i>
            <span>DJ Mode</span>
          </div>
        {{/if}}
      {{else}}
        <div class="status-badge status-offline">
          <i class="fas fa-wifi-slash"></i>
          <span>Not Connected</span>
        </div>
      {{/if}}
    </div>
  </header>

  <!-- Session Info (when not joined) -->
  {{#unless hasJoinedSession}}
  <div class="session-info">
    <div class="info-message">
      <i class="fas fa-info-circle"></i>
      <p><strong>Join sessions using the YouTube DJ widget</strong> above the player list.</p>
      <p>This window is for DJ controls and queue management only.</p>
    </div>
  </div>
  {{/unless}}

  <!-- Session & DJ Controls Section -->
  {{#if hasJoinedSession}}
  <div class="control-section session-control-section">
    <!-- Component container - content rendered by SessionControlsComponent -->
  </div>

  <!-- Queue Section (with integrated player controls) -->
  <div class="control-section queue-section">
    <!-- Component container - content rendered by QueueSectionComponent -->
  </div>
  {{/if}}

  <!-- Actions -->
  <div class="youtube-dj-actions">
    <button type="button" class="close-btn">
      <i class="fas fa-times"></i>
      Close
    </button>
  </div>
</div>