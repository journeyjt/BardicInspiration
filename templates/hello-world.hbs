<div class="hello-world-content">
  <header class="hello-world-header">
    <h2>
      <i class="fas fa-music"></i>
      {{message}}
    </h2>
    <p class="subtitle">Testing Bardic Inspiration Module</p>
  </header>

  <div class="hello-world-info">
    <div class="info-grid">
      <div class="info-item">
        <strong>Timestamp:</strong>
        <span>{{timestamp}}</span>
      </div>
      
      <div class="info-item">
        <strong>Developer Mode:</strong>
        <span class="{{#if isDevMode}}status-active{{else}}status-inactive{{/if}}">
          {{#if isDevMode}}
            <i class="fas fa-check"></i> Active
          {{else}}
            <i class="fas fa-times"></i> Inactive
          {{/if}}
        </span>
      </div>
      
      <div class="info-item">
        <strong>libWrapper:</strong>
        <span class="{{#if hasLibWrapper}}status-active{{else}}status-inactive{{/if}}">
          {{#if hasLibWrapper}}
            <i class="fas fa-check"></i> Available
          {{else}}
            <i class="fas fa-times"></i> Not Found
          {{/if}}
        </span>
      </div>
    </div>
  </div>

  <div class="hello-world-actions">
    <button type="button" class="test-button">
      <i class="fas fa-play"></i>
      Run Test
    </button>
    
    <button type="button" class="close-button">
      <i class="fas fa-times"></i>
      Close
    </button>
  </div>

  <div class="test-results">
    <div class="test-placeholder">
      <i class="fas fa-info-circle"></i>
      <p>Click "Run Test" to verify module functionality</p>
    </div>
  </div>

  {{#if isDevMode}}
  <div class="dev-mode-info">
    <h4>ðŸ§ª Developer Mode Active</h4>
    <p>Enhanced debugging and logging are enabled.</p>
    <p>Check the browser console for detailed module information.</p>
  </div>
  {{/if}}
</div>