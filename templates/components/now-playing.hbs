{{! Now Playing Component Template }}
<div class="section-header">
  <h3>
    <i class="fas fa-play-circle"></i>
    Now Playing
  </h3>
  <div class="section-status">
    {{#if isPlayerReady}}
    <div class="connection-status connected">
      <i class="fas fa-circle"></i>
      <span>Ready</span>
    </div>
    {{else}}
    <div class="connection-status connecting">
      <i class="fas fa-circle-notch fa-spin"></i>
      <span>Loading</span>
    </div>
    {{/if}}
  </div>
</div>

<div class="now-playing-card">
  <div class="track-info">
    <div class="track-title">{{currentVideoTitle}}</div>
    <div class="track-meta">
      <span class="playback-status">{{playerState}}</span>
      {{#if isDJ}}
      <span class="track-source">YouTube Player</span>
      {{else}}
      <span class="track-source">Synced Playback</span>
      {{/if}}
    </div>
  </div>
  <div class="player-widget-indicator">
    <i class="fas fa-external-link-alt"></i>
    <span>Player widget above</span>
  </div>
</div>