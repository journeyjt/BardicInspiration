{{! Player Controls Component Template }}
<div class="section-header">
  <h3>
    <i class="fas fa-gamepad"></i>
    Playback Controls
  </h3>
  <div class="section-status">
    {{#if isDJ}}
    <div class="control-mode dj-mode">
      <i class="fas fa-crown"></i>
      <span>DJ Mode</span>
    </div>
    {{else}}
    <div class="control-mode listener-mode">
      <i class="fas fa-eye"></i>
      <span>View Only</span>
    </div>
    {{/if}}
  </div>
</div>

{{#if isDJ}}
<!-- DJ Transport Controls -->
<div class="control-group transport-group">
  <div class="control-group-header">
    <span class="control-label">Transport</span>
  </div>
  <div class="transport-controls">
    <button type="button" class="control-btn primary-btn play-btn" {{#unless isPlayerReady}}disabled{{/unless}}>
      <i class="fas fa-play"></i>
      <span>Play</span>
    </button>
    <button type="button" class="control-btn secondary-btn pause-btn">
      <i class="fas fa-pause"></i>
      <span>Pause</span>
    </button>
    <button type="button" class="control-btn accent-btn next-btn" {{#unless hasQueue}}disabled{{/unless}}>
      <i class="fas fa-step-forward"></i>
      <span>Next Track</span>
    </button>
  </div>
</div>

<!-- Seek Bar Component will be inserted here -->
<div class="seek-bar-section"></div>
{{else}}
<!-- Listener View -->
<div class="control-group listener-info-group">
  <div class="listener-notice">
    <i class="fas fa-info-circle"></i>
    <div class="notice-content">
      <h4>Listening Mode</h4>
      <p>Playback is controlled by the DJ. You can view the current queue and session status.</p>
    </div>
  </div>
</div>
{{/if}}